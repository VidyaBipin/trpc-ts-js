{
  "name": "trpcroot",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "**/@prisma",
      "**/@prisma/**"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.11.1",
    "**/@typescript-eslint/parser": "^4.11.1",
    "**/jest": "^26.6.3",
    "**/ts-jest": "^26.4.4",
    "**/typescript": "^4.1.3"
  },
  "scripts": {
    "lerna": "lerna",
    "start": "preconstruct watch",
    "dev": "yarn start",
    "test": "lerna run test --scope @trpc/* --stream --",
    "lint": "eslint --ext \".js,.ts,.tsx\" --ignore-path .gitignore .",
    "lint-fix": "yarn lint --fix && manypkg fix",
    "postlint": "manypkg check",
    "postinstall": "preconstruct dev",
    "build": "preconstruct build",
    "build-examples": "lerna run build --scope @examples/* --stream",
    "prepublish": "lerna run prepublish --stream",
    "example:playground": "yarn --cwd examples/playground dev",
    "example:todomvc": "yarn --cwd examples/next-prisma-todomvc dev",
    "example:chat": "yarn --cwd examples/next-ssg-chat dev",
    "example:hello": "yarn --cwd examples/next-hello-world dev",
    "example:standalone": "yarn --cwd examples/standalone-server dev",
    "changeset": "changeset",
    "release": "changeset publish",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary"
  },
  "dependencies": {
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@changesets/changelog-github": "^0.2.8",
    "@changesets/cli": "^2.13.1",
    "@manypkg/cli": "^0.17.0",
    "@preconstruct/cli": "^2.0.6",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "eslint": "^7.22.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "expect-type": "^0.11.0",
    "lerna": "^4.0.0",
    "playwright": "^1.8.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-jest": "^26.5.3",
    "tsdx": "^0.14.1",
    "typescript": "^4.2.3"
  }
}
